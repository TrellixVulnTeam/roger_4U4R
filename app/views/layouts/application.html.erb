        <div class="col-md-2 col-xs-2 header_pc link under"><%= link_to '募集要項', controller: 'requirements', action: 'index'%></div>
        <div class="col-md-2 col-xs-2 header_pc link"><%= link_to '入店までの流れ', controller: 'flows', action: 'index'%></div>
        <div class="col-md-2 col-xs-2 header_pc link"><%= link_to '応募フォーム', controller: 'applications', action: 'index'%></div>
      </div>
    <% end %>
