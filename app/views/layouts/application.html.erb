        </div>
        <!-- 共通タイトル -->
        <div class="col-md-10 col-xs-10 header">NAGOYA FIRST ONE GROUP</div>
        <div class="col-md-1 col-xs-0 "></div>
      <% else %>
        <!-- 共通タイトル -->
        <div class="col-md-3 col-xs-3 header_pc">NAGOYA FIRST ONE GROUP</div>
        <div class="col-md-2 col-xs-2 header_pc link"><%= link_to 'CONCEPT', controller: 'concepts', action: 'index'%></div>
        <div class="col-md-1 col-xs-1 header_pc link sp"><%= link_to '待遇', controller: 'treatments', action: 'index'%></div>
        <div class="col-md-2 col-xs-2 header_pc link under"><%= link_to '募集要項', controller: 'requirements', action: 'index'%></div>
